<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/leftTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/received_message_user__profile_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/girl" />

        <TextView
            android:id="@+id/leftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/received_message_user__profile_image"
            android:layout_toRightOf="@+id/received_message_user__profile_image"
            android:background="@drawable/left_background"
            android:gravity="start"
            android:padding="10dp"
            android:text="Hello"
            android:textColor="@color/darkBlue" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rightTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sent_message_user__profile_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/boy" />

        <TextView
            android:id="@+id/rightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/sent_message_user__profile_image"
            android:layout_toStartOf="@+id/sent_message_user__profile_image"
            android:background="@drawable/right_background"
            android:gravity="start"
            android:padding="10dp"
            android:text="Hello"
            android:textColor="@color/white" />

    </RelativeLayout>

