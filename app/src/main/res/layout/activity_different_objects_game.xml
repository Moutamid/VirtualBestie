<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".games.DifferentObjectsGameActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/balloonLottie"
                android:layout_centerInParent="true"
                app:lottie_autoPlay="true"
                app:lottie_fileName="balloon.json"
                app:lottie_loop="true"
                app:lottie_speed="1.25" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:id="@+id/jumpLottie"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                app:lottie_autoPlay="true"
                app:lottie_fileName="jumpthroughhoops.json"
                app:lottie_loop="true"
                app:lottie_speed="1.25" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:id="@+id/geometryLottie"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                app:lottie_autoPlay="true"
                app:lottie_fileName="geometryhouse.json"
                app:lottie_loop="true"
                app:lottie_speed="1.25" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/orangeLottie"
                android:layout_centerInParent="true"
                app:lottie_autoPlay="true"
                app:lottie_fileName="orangecircle.json"
                app:lottie_loop="true"
                app:lottie_speed="1.25" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>